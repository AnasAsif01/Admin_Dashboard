*{
    margin: 0;
    padding: 0;
    box-sizing: border-box; 
    font-family: 'Times New Roman', Times, serif;
}
body{
    background-color: rgb(253, 253, 245);
}
.container-fluid{
     /* background-image: url('Photos/flowers-4004190_1280.jpg'); */
    
    background-image: url('/assets/images/flowers-4004190_1280.jpg');
   

    background-repeat: no-repeat;
    position: relative;
    background-size: cover;
}
.cont a{
    margin: 20px;
    padding: 30px;
    text-decoration: none;
    color: black;
    font-weight: bold;
}
.cont span{
    float: right;
}
.cont i{
    padding: 10px;
}
.navbar{
    display: flex;
    align-items: center;
    transition: left 0.9s ease;
}
nav{
    flex: 1;
    text-align: center;
}
nav ul li a{
    display: block;
    color: black;
    font-size: 22px;
    padding: 10px;
    border-radius: 10px;
    transition: 0.5s;
    margin: 7px;
    background:rgb(245, 241, 241);
    text-decoration: none;
}
nav ul li a:hover{
    background:rgb(218, 29, 130);
    color: #fefefe;
    cursor: pointer;
}
nav ul li{
    display: inline-block;
    margin: 10px;
}
.navbar img{
    width: 40%;
    height: 40%;
}
.hamburger {
    margin-top: 10px;
    margin-left: 80%;
    display: none; 
    cursor: pointer;
}
.hamburger div {
    width: 30px;
    height: 4px;
    background-color: #336cf3;
    margin: 6px auto;
    transition: 0.5s;
}
.home .content{
    text-align: center;
    margin: 10px auto;
}
.home .content h3{
    font-size: 2.4rem;
    text-transform: uppercase;
}
.home .content h3 span{
    color:  #1c5df6;
    text-transform: uppercase;
}
.home .content a{
    text-decoration: none;
}
.btn2{
    margin-top: 20px;
    display: inline-block;
    padding: 10px 10px;
    transition: 0.5s;
    font-size: 1.5rem;
    border-radius: 10px;
    background: rgb(252, 55, 88);
    color: #fffefe;
    cursor: pointer;
}
.btn2:hover{
    background: #336cf3;
    color: whitesmoke;
}
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 1;
}
.modal-content {
    height: 35%;
    background-color: #fff;
    margin: 10% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 35%;
}
.modal-content h2{
    text-align: center;
    color: #336cf3;
    font-weight: bold;
}
.modal-content a{
    text-decoration: none;
    color: black;
    text-align: center;
    margin: 10px;
    padding: 10px;
    border-radius: 10px;
    background-color: rgb(109, 255, 109);
}
.close {
    float: right;
    cursor: pointer;
}
.cont1 h3{
    font-size: 2.4rem;
    text-align: center;
    margin-top: 10px;
    color: black;
}
.cont2 h2{
    margin: 2%;
    text-align: center;
}
.cont2 h2 span{
    color: #1859f2;
}
.card{
    transition: all 0.2s;
}
.card:hover{
    transform: translateY(-10px);
}
.btn a{
    text-decoration: none;
    color: white;
    padding: 5px;
}
.popup-content{
    display: none;
    width: auto;
    height: auto;
    border: 1px solid black;
    border-radius: 30px;
    padding: 10px;
    margin-top: 10px;
    margin-bottom: 20px;
    background-color: #fefefe;
    transition: all 0.2s;
}
.popup-content:hover{
    background-color: #ececec;
    transform: translateY(-10px);
}
.popup-content h2{
    margin-top: 10px;
    font-weight: 500;
}
.popup-content h2 span{
    color: #336cf3;
}
.popup-content .col{
    text-align: left;
    margin: 10px;
    padding: 10px;
}
.popup-content .col i{
    color: rgb(218, 29, 130);
}
.popup-content .col ol li span{
    padding: 10rem;
    color: #134dd4;
}
section{    
    padding: 1rem 9%;
}
.heading{
    text-align: center;
    padding-bottom: 2rem;
    color: #222;
    text-transform: uppercase;
    font-size: 2.4rem;
}
.heading span{
    color: #336cf3 ;
}
.services .box-container{
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
    gap: 1.3rem;
}
.services .box-container .box{
    border: 1px solid #222;
    border-radius: .5rem;
    background: #eeeeee;
    text-align: center;
    padding: 1.3rem;
}
.services .box-container .box i{
    height: 4rem;
    width: 4rem;
    line-height: 4rem;
    border-radius: 50%;
    font-size: 2.1rem;
    background:#336cf3;
    color: #fff;
}
.services .box-container .box h3{
    font-size: 2rem;
    padding: 1rem;
}
.services .box-container .box p{
    line-height: 1.2;
}
.contact form{
    max-width: 55rem;
    margin: 1rem auto;
    text-align: center;
}
.contact form .inputox{
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.contact form .inputBox input,
.contact form textarea{
    width: 100%;
    background: #eeeeee;
    border: .5px solid #333;
    border-radius: 5px;
    padding: .7rem;
    margin: .7rem 0;
    font-size: 1.2rem;
    color: #090909;
    text-transform: none;
}
.contact form .inputBox input::placeholder,
.contact form textarea::placeholder{
    color: black;
    text-transform: capitalize;
}
.contact form .inputBox input:focus,
.contact form textarea:focus{
    color: black;
}
.contact form .inputBox input{
    width: 49%;
}
.contact form textarea{
    height: 15rem;
    resize: none;
}
.footer{
    background: linear-gradient(120deg, rgb(246, 172, 184), rgb(136, 208, 231));
    border-top-left-radius: 110px;
    border-top-right-radius: 110px;
}
.footer .box-container{
    display: grid;
    grid-template-columns: repeat(auto-fit,minmax(18rem, 1fr));
    gap: 1rem;
}
.footer .box-container .box h3{
    font-size: 1.5rem;
    padding: 10px;
    color: black;
}
.footer .box-container .box a{
    transition: 0.5s;
    display: block;
    padding: 7px;
    color: black;
    text-decoration: none;
}
.footer .box-container .box a i{
    padding: .2rem;
    color: #336cf3;
}
.footer .box-container .box a:hover i{
    padding-right: .7rem;
    color: black;
}
.footer .credit{
    text-align: center;
    border-top: .1rem solid #222;
    color: black;
}
.footer .credit span{
    color: #336cf3;
}



































@media (max-width: 850px) {
    .navbar img{
        width: 60%;
        height: 60%;
    }
    .container-fluid{
        height: 25vh;
    }
    .navbar ul {
        display: none; 
    }
    .hamburger {
        display: block;
        top: 30px;
        right: 50px;
        cursor: pointer;
    }
    .navbar.open ul {
        display: block;
        position: fixed;
        top: 0;
        left: 0;
        width: 300px;
        height: 100%;
        background-color: rgba(226, 223, 223, 0.9);
        padding-top: 50px;
        transition: left 0.6s ease;
        z-index: 9999;
    }
    .navbar.open nav ul li a{
        display: flex;
        margin-top: 20px;
        padding: 20px;
        align-items: center;
        text-align: center;
    }
    .cont a{
        padding: 10px;
    }

}
@media only screen and (max-width:750px){
    .navbar img{
        width: 70%;
        height: 60%;
    }
    .container-fluid{
        height: 20vh;
    }
    .hamburger {
        top: 25px;
        right: 50px;
        cursor: pointer;
    }
    .cont a{
        padding: 5px;
        font-weight: 200;
    }

}


@media only screen and (max-width:463px){
    .navbar img{
        width: 60%;
        height: 60%;
    }
    .container-fluid{
        height: 15vh;
    }
    .contact form .inputBox input{
        width: 100%;
    }
}
@media only screen and (max-width:385px){
    .container-fluid{
        height: 15vh;
    }
    .navbar img{
        width: 70%;
        height: 70%;
    }
}
